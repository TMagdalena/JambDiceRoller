<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginRight="25dp"
               app:layout_constraintTop_toTopOf="@id/second_dice"
               app:layout_constraintRight_toLeftOf="@id/second_dice"
               android:src="@drawable/dice_six"
               android:id="@+id/first_dice"
    />

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginTop="100dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/dice_six"
               android:id="@+id/second_dice"
    />

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginLeft="25dp"
               app:layout_constraintTop_toTopOf="@id/second_dice"
               app:layout_constraintLeft_toRightOf="@id/second_dice"
               android:src="@drawable/dice_six"
               android:id="@+id/third_dice"
    />

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginRight="25dp"
               app:layout_constraintTop_toTopOf="@id/fifth_dice"
               app:layout_constraintRight_toLeftOf="@id/fifth_dice"
               android:src="@drawable/dice_six"
               android:id="@+id/fourth_dice"
    />

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginTop="200dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/dice_six"
               android:id="@+id/fifth_dice"
    />

    <ImageView android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginLeft="25dp"
               app:layout_constraintTop_toTopOf="@id/fifth_dice"
               app:layout_constraintLeft_toRightOf="@id/fifth_dice"
               android:src="@drawable/dice_six"
               android:id="@+id/sixth_dice"
    />

    <Button android:text="@string/roll_dice_buttontext"
            android:id="@+id/roll_dice_button"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fifth_dice"
            android:layout_marginBottom="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

</androidx.constraintlayout.widget.ConstraintLayout>